<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/rating.css" />
<div class="row">
  <div class="col-6">
    <div class="card shadow-lg rounded mb-3">
      <div
        id="carouselExampleControlsNoTouching"
        class="carousel slide"
        data-bs-touch="false"
        data-bs-interval="false"
      >
        <div class="carousel-inner">
          <% for( let i = 0; i < foundPlace.image.length; i++ ) { %>
          <div class="carousel-item <%= i==0 ? 'active' : '' %>">
            <img
              src="<%= foundPlace.image[i].url %>"
              class="d-block w-100"
              style="max-height: 25rem"
              alt="..."
            />
          </div>
          <% } %>
        </div>
        <% if (foundPlace.image.length > 1) { %>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleControlsNoTouching"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleControlsNoTouching"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>

      <div class="card-body">
        <h5 class="card-title"><%= foundPlace.title %></h5>
        <p class="card-text text-muted"><%= foundPlace.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= foundPlace.location %></li>
        <li class="list-group-item">
          <i>Created By <%= foundPlace.creator.username %></i>
        </li>
        <li class="list-group-item">
          <span class="text-danger"
            >Danger Level : <%= foundPlace.dangerLevel %></span
          >
        </li>
      </ul>
      <% if (currentUser && currentUser._id.equals(foundPlace.creator._id)) { %>
      <div class="card-body">
        <a
          href="/places/<%= foundPlace._id %>/edit"
          class="card-link btn btn-primary"
          >Edit Place</a
        >
        <form
          class="d-inline"
          action="/places/<%= foundPlace._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger card-link">Delete Place</button>
        </form>
      </div>
      <% } %>

      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-6">
    <div id="map" style="width: 100%; height: 20rem"></div>
    <% if (currentUser) { %>
    <div class="mb-3">
      <h2>Leave a Review</h2>
      <form
        action="/places/<%= foundPlace._id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-0">
          <p class="d-block">Find this post helpful ?</p>
          <fieldset class="starability-basic">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Review</label>
          <textarea
            id="body"
            name="review[body]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please provide at least few words.</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
    </div>
    <% } %> <% for( let review of foundPlace.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <i class="fs-6 text text-muted">Created by</i>
          <%= review.creator.username %>
        </h5>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>
        <p class="card-text">Review : <%= review.body %></p>
      </div>
      <% if (currentUser && currentUser._id.equals(review.creator._id)) { %>
      <div class="card-footer">
        <form
          action="/places/<%= foundPlace._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>

<script>
  const mapKey = "<%-process.env.MAP_TOKEN%>";
  const place = <%- JSON.stringify(foundPlace) %>;
</script>

<script src="/js/showMap.js"></script>
