<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card shadow-lg rounded mb-3">
      <img src="<%= foundPlace.image %>" class="card-img-top" alt="place" />
      <div class="card-body">
        <h5 class="card-title"><%= foundPlace.title %></h5>
        <p class="card-text text-muted"><%= foundPlace.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= foundPlace.location %></li>
        <li class="list-group-item">
          <span class="text-danger"
            >Danger Level : <%= foundPlace.dangerLevel %></span
          >
        </li>
      </ul>
      <div class="card-body">
        <a
          href="/places/<%= foundPlace._id %>/edit"
          class="card-link btn btn-primary"
          >Edit Place</a
        >
        <form
          class="d-inline"
          action="/places/<%= foundPlace._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger card-link">Delete Place</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-6">
    <div class="mb-3">
      <h2>Leave a Review</h2>
      <form
        action="/places/<%= foundPlace._id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="rating" class="form-label"
            >Find this post helpful ?</label
          >
          <input
            type="range"
            min="1"
            max="5"
            class="form-range"
            name="review[rating]"
            id="rating"
          />
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Review</label>
          <textarea
            id="body"
            name="review[body]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please provide at least few words.</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
    </div>
    <% for( let review of foundPlace.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating : <%= review.rating %></h5>
        <p class="card-text text-muted">Review : <%= review.body %></p>
      </div>
      <div class="card-footer">
        <form
          action="/places/<%= foundPlace._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
