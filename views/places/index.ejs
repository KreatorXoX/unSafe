<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 30rem"></div>
<h1 class="text-center mt-5">Places</h1>
<div class="d-flex flex-column flex-sm-row justify-content-between">
  <form method="get" action="/places?" class="d-flex">
    <input
      class="form-control m-auto"
      name="search"
      type="text"
      placeholder="Search by location"
      aria-label="Search"
    />
    <button class="btn btn-outline-success m-auto" type="submit">Search</button>
  </form>
  <a href="/places/new" class="btn btn-success my-3">Add new place</a>
</div>

<% for (let place of allPlaces){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (place.image[0]) { %>
      <img
        src="<%= place.image[0].url %>"
        class="mw-100"
        style="max-height: 20rem"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= place.title %></h5>
        <p class="card-text"><%= place.description %></p>
        <p class="card-text">
          <span class="text-muted"><%= place.location %></span>
        </p>
        <a href="/places/<%= place._id %> " class="btn btn-primary"
          >View <%= place.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
<script>

  const mapKey = "<%-process.env.MAP_TOKEN%>";
  const places = {features:<%- JSON.stringify(allPlaces) %>};
</script>
<script src="/js/clusterMap.js"></script>
